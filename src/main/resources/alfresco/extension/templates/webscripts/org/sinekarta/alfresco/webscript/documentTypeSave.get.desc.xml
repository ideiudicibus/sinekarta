<webscript>
  <shortname>sinekarta documentTypeSave</shortname>
  <description>
	script to save a single document types.
	accept three optional parameters : 
	documentTypeDescription - to wuery a document type "like" the given description
	documentTypeExternalCode - 
	documentTypeOcrRequired - 
	documentTypeDefaultLanguage - 
	documentTypeDocLocationRule - 
	documentTypeMarkLocationRule - 
	if no sufficient parameter is given, this service will throws an Error
	supported return types : xml, json 
	default : xml
  </description>
  <url>/sinekarta/documentTypeSave?documentTypeDescription={documentTypeDescription?};documentTypeExternalCode={documentTypeExternalCode?};documentTypeOcrRequired={documentTypeOcrRequired?};documentTypeDefaultLanguage={documentTypeDefaultLanguage?};documentTypeDocLocationRule={documentTypeDocLocatioRule?};documentTypeMarkLocationRule={documentTypeMarkLocationRule?}</url>
  <format default="xml">any</format>
  <authentication>user</authentication>
  <transaction>required</transaction>
</webscript>
